{% extends 'base.html.twig' %}
{% block title %}Preview Task{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <a href="{{ path('todos_list') }}" class="btn btn-xs btn-light"><span class="fa fa-pencil">BACK TO THE LIST</span></a>
    </div>
    <div class="row">    
        <div class="jumbotron col-sm-6 col-md-9">        
          <h1 class="display-4"> {{heading}} </h1>
        </div>
        <div class="form-group col-sm-6 col-md-3">
            <h2>Add Task</h2>
            {{ form_start(taskForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(taskForm) }}
            {{ form_end(taskForm) }}
        </div>
    </div>
</div>


<div class="container">
<h3>Task List</h3>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <tr>
                        <th>Todo No.#</th>
                        <th>Task No.#</th>
                        <th>Name</th>
                        <th>Deadline</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                    {% for task in tasks %}
                        <tr>
                            <td>{{ task.todo_id }}</td>
                            <td>{{ task.task_id }}</td>
                            <td>{{ task.task_name }}</td>
                            <td>{{ task.deadline|date('F j, Y') }}</td>                           
                            <td>
                                <a href="{{ path('task_delete',{'id': task.task_id, 'todoId': task.todo_id}) }}" class="btn btn-xs btn-danger"><span class="fa fa-pencil">DELETE</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}